<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
    	
    	<h1>Login</h1>

    	<%= form_for :login do |f| %>
    	<div class="form-group">
		<%= f.label :email %> 
		<%= f.text_field :email, class: 'form-control', id: 'inputEmail' %>
		</div>

		<div class="form-group">
		<%= f.label :password %> 
		<%= f.password_field :password, class: 'form-control' %>
		</div>

		<%= f.submit "Login", class: "btn btn-primary" %>
	</div>


	
	<% end %>
</div>
</div> 
