<div class="container">
  <div class="row">
    <div class="col-md-4">
    <h1>Update Information</h1>

		<%= form_for @event, url: update_supperclub_event_path do |f| %>

		<div class: "form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>

		<div class: "form-group">
			<%= f.label :date %>
			<%= f.text_field :date, class: 'form-control' %>
		</div>

		<div class: "form-group">
			<%= f.label :time %>
			<%= f.text_field :time, class: 'form-control' %>
		</div>

		<div class: "form-group">
			<%= f.label :about %>
			<%= f.text_area :about, class: 'form-control' %>
		</div>

		<%= f.submit "Submit", class: "btn btn-primary" %>

		<% end %>

		<%= link_to "Delete This Event", delete_supperclub_event_path, method: :delete, data: {confirm: "Are you sure?"}%> <br>
	</div>
</div>
</div>
